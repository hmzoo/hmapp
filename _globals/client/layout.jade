head
  title APP
  meta(charset="utf-8")

  meta(name="apple-mobile-web-app-capable" content="yes")
  meta(name="format-detection" content="telephone=no")

  meta(name="viewport" content="user-scalable=no, initial-scale=1.0,maximum-scale=1.0")

body


template(name="layout")
  +navigation(title="MY APP")
  .container
    +Template.dynamic(template=content)
  +meteorStatus



template(name="navigation")
  nav(class="navbar navbar-inverse" role="navigation")
    .container-fluid
      .navbar-header
        a.navbar-brand(href="/") #{title}
        button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

      div(class="collapse navbar-collapse")
        ul(class="nav navbar-nav")
          if isLogged
            li
              a(href="/dashboard") Dashboard

        ul(class="nav navbar-nav navbar-right")
          if isAdmin
            li
              a(href="/admin/memos") Notes
            li.dropdown
              a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Manage <b class='caret'></b>
              ul.dropdown-menu
                li
                  a(href="/admin/users") Users
                li
                  a(href="/admin/files") Files

          +loginButtons



template(name="notfound")
  div#notfound.text-center.vertical-align
    p.fa.fa-warning  404, page not found !



template(name="_loginButtonsAdditionalLoggedInDropdownActions")
    button(class="btn btn-default btn-block" id="login-buttons-edit-profile") Edit profile
